<h2> <strong>Trip ID: </strong><%=  @trip.id %> </h2>

<p><strong>Cost:</strong> 
<%= number_to_currency(@trip.cost) %>
</p>

<p><strong>Date:</strong> 
<%=@trip.date.strftime("%m/%d/%Y")%>
</p>

<p><strong>Rating</strong>
<%= @trip.rating %>
</p>


<p><strong>Passenger:</strong> 
<%= link_to @trip.passenger.name, passenger_path(@trip.passenger) %>
</p>

<p><strong>Driver:</strong> 
<%= link_to @trip.driver.name, driver_path(@trip.driver) %>
</p>

<p>
<%= link_to "Edit", edit_trip_path(@trip.id) %> | <%= link_to "Delete", trip_path(@trip.id), method: :delete, data: {confirm: "Are you sure?"} %>
</p>

