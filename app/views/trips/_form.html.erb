<%# 
< % if @passenger.errors.any? % >
  <ul class="errors">
    < % @passenger.errors.each do |column, message| % >
      <li>
        <strong><%= column.capitalize % ></strong> < %= message % >
      </li>
    < % end % >
  </ul>
< % end % >
%>


<%= form_with model: @trip, class: 'trip-form' do |f| %>

<div>
  <%= f.label :date %>
  <%= f.text_field :date %>
</div>
<div>
  <%= f.label :driver_id %>
  <%= f.text_field :driver_id %>
</div>
<div>
  <%= f.label :passenger_id %>
  <%= f.text_field :passenger_id%>
</div>
<div>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
</div>
<div>
  How many stars? (1-5)
  <%= f.label :rating %>
  <%= f.text_field :rating %>
</div>
<div>
  <%= f.submit action_name, class: "trip-button"%>
</div>
<% end %>