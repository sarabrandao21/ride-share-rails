<h2> <strong>Driver name: </strong><%=  @driver.name %> </h2>

<p><strong>VIN: </strong><%=@driver.vin %></p>
<p><strong>Status: </strong><%= @driver.available ? "Available" : "Not Available" %></p>
<p><strong>Total Earnings: </strong> <%= number_to_currency(@driver.total_rides) %></p>
<p><strong>Average Rating: </strong> <%= @driver.average_rating %></p>

<p>
  <%= link_to "Edit", edit_driver_path(@driver.id) %> | 
  <%= link_to "Delete", driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure?"} %>
</p>

<h3>Trips</h3>
  <table>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Passenger</th>
      <th>Cost</th>
      <th>Rating</th>
    </tr>
    <% @driver.trips.each do |trip|  %>
      <tr>
        <td>
          <%= link_to trip.id, trip_path(trip.id) %>
        </td>
        <td>
          <%= trip.date.strftime("%m/%d/%Y") %>
        </td>
        <td>
          <%= link_to trip.passenger_id, passenger_path(trip.passenger) %>
        </td>
        <td>
          <%= number_to_currency(trip.cost) %>
        </td>
        <td>
          <%= trip.rating %>
        </td>
      </tr>
    <% end %>
    </table>


<p> <%= link_to "Return to Drivers List", drivers_path %> </p>


