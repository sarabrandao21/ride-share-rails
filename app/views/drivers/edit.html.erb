<%= form_with model: @driver do |f| %>
 <p>Please provide the following new information to edit the driver in our database:</p>
 <div>
    <%= f.label :name%>
    <%= f.text_field :name %>
 </div>
 <div>
    <%= f.label :vin%>
    <%= f.text_field :vin %> 
 </div>
  <%= f.submit "Edit Driver", class: "task-button"%>

<% end %>