<h2>Riders</h2>
<section class="button">
  <%= link_to "Add a New Rider", new_passenger_path %>
</section>

  <table class="table table-hover name-table">
    <tr>
      <th>Rider Name</th>
    </tr>
    <% @passengers.each do |passenger|  %>
      <tr>
        <td>
          <%= link_to passenger.name, passenger_path(passenger) %>
        </td>
      </tr>
  <% end %>
  </table>


